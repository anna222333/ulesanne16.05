@model Customer

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmailId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmailId)
        </dd>
        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            @Model.City?.Name
        </dd>
        <dt class="col-sm-2">
            Country
        </dt>
        <dd class="col-sm-10">
            @Model.City?.Country?.Name
        </dd>
        <dt class="col-sm-2">
            
        </dt>

        <div class="col-md-12 btn-group pb-2">
            <div class="form-group col-4 p-0">
              
                <div class="form-group col-4 p-0">
                    <label asp-for="ProfilePhoto" class="control-label"></label>
                    <img id="PreviewPhoto"
                         src="@(string.IsNullOrEmpty(Model.PhotoUrl) ? Url.Content("~/images/noimage.png") : Url.Content("~/images/" + Model.PhotoUrl))"
                         alt="Customer Photo"
                         class="img-fluid rounded" style="max-width: 125px;" />
                    <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                </div>
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>
            <div class="col-1 p-0">
                <!-- Пустой div для отступа или выравнивания -->
            </div>

        </div>
    </dl>
    
    <form asp-action="Delete" >
        <input type="hidden"  />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">

                   document.querySelector('form[asp-action="Delete"]').addEventListener("submit", function (e) {
            var confirmed = confirm("Are you sure you want to delete a customer?");
            if (!confirmed) {
                e.preventDefault();
            }
        });



    </script>

}